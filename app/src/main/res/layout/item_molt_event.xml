<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp">

    <!-- Timeline indicator -->
    <View
        android:id="@+id/timeline_indicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/timeline_indicator"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- State Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/eventStateChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre-molt"
            app:chipBackgroundColor="@android:color/holo_orange_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Pre-molt" />

        <!-- Confidence -->
        <TextView
            android:id="@+id/confidenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95%"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/eventStateChip"
            app:layout_constraintBottom_toBottomOf="@id/eventStateChip"
            app:layout_constraintStart_toEndOf="@id/eventStateChip"
            tools:text="Confidence: 95%" />

        <!-- Event Time -->
        <TextView
            android:id="@+id/eventTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h ago"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/eventStateChip"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="2 hours ago" />

        <!-- Event Details -->
        <TextView
            android:id="@+id/eventDetailsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Molt state transition"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/eventTimeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Molt state transition detected" />

        <!-- Event ID -->
        <TextView
            android:id="@+id/eventIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: abc123..."
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/eventDetailsText"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="ID: abc12345..." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
