<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Video Surface Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/black">

            <!-- Video View -->
            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Placeholder for no video -->
            <ImageView
                android:id="@+id/placeholderImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_camera"
                android:alpha="0.5"
                android:scaleType="centerInside"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Connection Status Overlay -->
            <View
                android:id="@+id/statusOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stream_connecting"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Quality Badge (Top Right) -->
            <com.google.android.material.chip.Chip
                android:id="@+id/qualityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MQ"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                app:chipBackgroundColor="#99000000"
                app:chipStrokeWidth="0dp"
                app:chipMinHeight="24dp"
                app:chipIconSize="14dp"
                app:chipIcon="@drawable/ic_network"
                app:chipIconTint="@color/white"
                style="@style/Widget.Material3.Chip.Assist"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Snapshot FAB (Floating over video) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/snapshotFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"
                android:contentDescription="@string/take_snapshot"
                android:visibility="gone"
                app:fabSize="mini"
                app:tint="@color/white"
                app:backgroundTint="@color/primary"
                android:layout_margin="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Live Indicator -->
            <TextView
                android:id="@+id/liveIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/live_indicator_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Stream Info & Control Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Stream Name and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/streamNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textStyle="bold"
                    tools:text="Main Tank - Top View" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/statusChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_offline"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    app:chipMinHeight="28dp"
                    style="@style/Widget.Material3.Chip.Assist" />

            </LinearLayout>

            <!-- Consolidated Control Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/colorSurfaceVariant"
                android:padding="8dp"
                android:layout_marginTop="4dp">

                <!-- Stream Metrics (visible when active) -->
                <LinearLayout
                    android:id="@+id/metricsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="start|center_vertical">

                    <TextView
                        android:id="@+id/qualityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="12dp"
                        tools:text="720p â€¢ 30fps" />

                    <TextView
                        android:id="@+id/latencyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="120ms" />

                </LinearLayout>

                <!-- Spacer when metrics hidden -->
                <View
                    android:id="@+id/metricsSpacer"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Play/Pause Toggle Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playPauseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_play"
                    android:minWidth="96dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>