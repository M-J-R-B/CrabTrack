<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.settings.SettingsFragment"
    android:background="@color/blu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Water Quality Section Header -->
        <TextView
            android:id="@+id/text_settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Water Quality Thresholds"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white" />

        <!-- PARENT CARDVIEW (container for all MaterialCardViews) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <!-- Single stacking container inside CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- pH Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="pH Level"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ph_min_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:hint="Minimum"
                                app:helperText="e.g., 7.0"
                                app:helperTextTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/blu">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ph_min_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ph_max_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Maximum"
                                app:helperText="e.g., 8.5"
                                app:helperTextTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/blu">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ph_max_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Salinity Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Salinity (ppt)"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/salinity_min_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:hint="Minimum (ppt)"
                                app:helperText="e.g., 25"
                                app:helperTextTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/blu">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/salinity_min_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/salinity_max_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Maximum (ppt)"
                                app:helperText="e.g., 35"
                                app:helperTextTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/blu">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/salinity_max_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Temperature Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Temperature (°C)"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/temp_min_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:hint="Minimum (°C)"
                                app:helperText="e.g., 22"
                                app:helperTextTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/blu">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/temp_min_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/temp_max_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Maximum (°C)"
                                app:helperText="e.g., 28"
                                app:helperTextTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/blu">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/temp_max_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- TDS Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="TDS (ppm)"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tds_min_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:hint="Minimum (ppm)"
                                app:helperText="e.g., 100"
                                app:helperTextTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/blu">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tds_min_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tds_max_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:hint="Maximum (ppm)"
                                app:helperText="e.g., 500"
                                app:helperTextTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/blu">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tds_max_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Turbidity Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Turbidity (NTU)"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/text_primary" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/turbidity_max_input_layout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Maximum (NTU)"
                            app:helperText="e.g., 5.0"
                            app:helperTextTextColor="@color/text_secondary"
                            app:boxStrokeColor="@color/blu">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/turbidity_max_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_reset_defaults"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:text="Reset to Defaults"
                        android:textSize="15sp"
                        app:strokeColor="@color/blu"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_save"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/blu"
                        android:text="Save Settings"
                        android:textSize="15sp"
                        app:cornerRadius="8dp" />
                </LinearLayout>

                <!-- Progress Indicator -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:indeterminate="true"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dispenser Section Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Dispenser"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <!-- Single stacking container inside CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Solution Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Solution Dispenser"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:textColor="@color/text_primary"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Volume (ml)"
                            app:helperText="Enter milliliters to dispense"
                            app:helperTextTextColor="@color/text_secondary"
                            app:boxStrokeColor="@color/blu"
                            app:prefixText="Volume: ">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ml_ph"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textSize="16sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_ph_dispense"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/blu"
                            android:layout_marginTop="8dp"
                            android:text="Dispense Solution"
                            android:textSize="15sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_menu_rotate"
                            app:iconGravity="textStart" />

                    </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Feeding Reminder Section Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Feeding Reminder"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white" />

        <!-- Feeding Reminder Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Set Feeding Schedule"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:textColor="@color/text_primary"/>

                        <!-- Date Picker -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select Date"
                            app:helperText="Tap to choose a date"
                            app:helperTextTextColor="@color/text_secondary"
                            app:boxStrokeColor="@color/blu"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_calendar">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/feeding_date_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Time Picker -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select Time"
                            android:layout_marginTop="16dp"
                            app:helperText="Tap to choose a time"
                            app:helperTextTextColor="@color/text_secondary"
                            app:boxStrokeColor="@color/blu"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_time">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/feeding_time_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Set Reminder Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_set_feeding_reminder"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/blu"
                            android:text="Set Feeding Reminder"
                            android:textSize="15sp"
                            app:cornerRadius="8dp"
                            app:icon="@android:drawable/ic_menu_my_calendar"
                            app:iconGravity="textStart" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Logout"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/secondary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="Logout"
            android:textSize="15sp"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_lock_power_off"
            app:iconGravity="textStart" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
