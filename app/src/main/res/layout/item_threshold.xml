<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:background="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_sensor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/button_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="pH" />

        <TextView
            android:id="@+id/text_sensor_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_sensor_name"
            app:layout_constraintStart_toEndOf="@+id/text_sensor_name"
            tools:text="mg/L" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.Material3.Button.TextButton" />

        <!-- Warning Thresholds -->
        <TextView
            android:id="@+id/label_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Warning"
            android:textColor="@color/warning_text"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_sensor_name" />

        <TextView
            android:id="@+id/label_warning_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/warning_min"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_warning" />

        <TextView
            android:id="@+id/text_warning_min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/label_warning_min"
            app:layout_constraintEnd_toStartOf="@+id/label_warning_max"
            app:layout_constraintStart_toEndOf="@+id/label_warning_min"
            tools:text="6.8" />

        <TextView
            android:id="@+id/label_warning_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warning_max"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/label_warning_min"
            app:layout_constraintStart_toStartOf="@+id/guideline_center" />

        <TextView
            android:id="@+id/text_warning_max"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/label_warning_max"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_warning_max"
            tools:text="8.2" />

        <!-- Critical Thresholds -->
        <TextView
            android:id="@+id/label_critical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Critical"
            android:textColor="@color/critical_text"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_warning_min" />

        <TextView
            android:id="@+id/label_critical_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/critical_min"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_critical" />

        <TextView
            android:id="@+id/text_critical_min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/label_critical_min"
            app:layout_constraintEnd_toStartOf="@+id/label_critical_max"
            app:layout_constraintStart_toEndOf="@+id/label_critical_min"
            tools:text="6.5" />

        <TextView
            android:id="@+id/label_critical_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/critical_max"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/label_critical_min"
            app:layout_constraintStart_toStartOf="@+id/guideline_center" />

        <TextView
            android:id="@+id/text_critical_max"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/label_critical_max"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_critical_max"
            tools:text="8.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>